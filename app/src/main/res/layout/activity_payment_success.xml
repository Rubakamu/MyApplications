<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_color">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_40"
            android:background="@drawable/ic_success_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tvKeyImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_200"
            android:src="@drawable/ic_key_vector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPassSuccessText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_payment_has_been_done_successfully"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvKeyImage" />

        <!--    <androidx.appcompat.widget.AppCompatTextView-->
        <!--        android:id="@+id/tvPassSuccessText2"-->
        <!--        android:layout_width="wrap_content"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:text="@string/been_reset"-->
        <!--        android:textColor="@color/white"-->
        <!--        android:textSize="@dimen/sp_26"-->
        <!--        app:layout_constraintTop_toBottomOf="@+id/tvPassSuccessText"-->
        <!--        app:layout_constraintStart_toStartOf="parent"-->
        <!--        app:layout_constraintEnd_toEndOf="parent"/>-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDone"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_56"
            android:layout_marginTop="@dimen/dp_40"
            android:background="@drawable/button_background"
            android:text="@string/got_it"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPassSuccessText" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>